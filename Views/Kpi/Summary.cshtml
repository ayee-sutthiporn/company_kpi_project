@model IEnumerable<CompanyKPI_Project.Models.YearlyKpiSummaryViewModel>

@{
    ViewBag.Title = "Yearly Performance Summary";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-bar-chart-fill"></i> Yearly Performance Summary</h2>
        </div>
        <div class="col-auto">
             <a href="@Url.Action("Index", "Kpi")" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>

    <!-- Summary Table -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-white">
            <h5 class="mb-0 text-secondary"><i class="bi bi-table"></i> Annual Performance Overview</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">Year</th>
                        <th class="text-center">Success Rate</th>
                        <th class="text-center">Total KPIs</th>
                        <th class="text-center">Passed</th>
                        <th class="text-center">Not Achieved</th>
                        <th class="text-center">Pending/Other</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var pending = item.TotalMeasurements - item.PassedCount - item.FailedCount;
                        <tr>
                            <td class="text-center fw-bold text-primary">@item.Year</td>
                            <td class="text-center">
                                <div class="d-flex align-items-center justify-content-center">
                                    <span class="me-2 fw-bold">@item.SuccessRate%</span>
                                    <div class="progress" style="width: 80px; height: 6px;">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @item.SuccessRate%"></div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">@item.TotalKpis</td>
                            <td class="text-center text-success fw-bold">@item.PassedCount</td>
                            <td class="text-center text-danger fw-bold">@item.FailedCount</td>
                            <td class="text-center text-muted">@pending</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-info" type="button" data-bs-toggle="collapse" data-bs-target="#dept-stats-@item.Year">
                                    <i class="bi bi-list"></i> Details
                                </button>
                                <a href="@Url.Action("UserDashboard", "Kpi", new { year = item.Year })" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>
                        <tr class="collapse" id="dept-stats-@item.Year">
                            <td colspan="7" class="bg-light p-3">
                                <h6>Department Breakdown (Measured)</h6>
                                <table class="table table-sm table-bordered bg-white">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Department</th>
                                            <th class="text-center">Measured Total</th>
                                            <th class="text-center">Passed</th>
                                            <th class="text-center">Not Achieved</th>
                                            <th class="text-center">Success Rate</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (item.DepartmentStats != null && item.DepartmentStats.Any())
                                        {
                                            foreach (var ds in item.DepartmentStats)
                                            {
                                                <tr>
                                                    <td>@ds.DepartmentName</td>
                                                    <td class="text-center">@ds.Total</td>
                                                    <td class="text-center text-success">@ds.PassedCount</td>
                                                    <td class="text-center text-danger">@ds.FailedCount</td>
                                                    <td class="text-center">
                                                        @ds.SuccessRate%
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr><td colspan="5" class="text-center text-muted">No specific department data available.</td></tr>
                                        }
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <h4 class="mb-3 text-secondary"><i class="bi bi-pie-chart"></i> Visual Breakdown</h4>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title fw-bold mb-0">FY @item.Year</h5>
                            <span class="badge bg-light text-dark border">@item.SuccessRate% Pass</span>
                        </div>
                        <div style="position: relative; height: 200px; width: 100%;">
                             <canvas id="chart-@item.Year"></canvas>
                        </div>
                        <div class="mt-3 text-center small text-muted">
                            Total Measurements: @item.TotalMeasurements
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/Scripts/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        @foreach (var item in Model)
        {
            <text>
            new Chart(document.getElementById('chart-@item.Year').getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: ['Passed', 'Not Achieved', 'Pending/Other'],
                    datasets: [{
                        data: [@item.PassedCount, @item.FailedCount, @(item.TotalMeasurements - item.PassedCount - item.FailedCount)],
                        backgroundColor: ['#198754', '#dc3545', '#e9ecef'],
                        borderWidth: 1
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                boxWidth: 12,
                                usePointStyle: true
                            }
                        }
                    },
                    cutout: '65%'
                }
            });
            </text>
        }
    });
</script>
